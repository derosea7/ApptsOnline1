@model Appts.Web.Ui.Scheduler.ViewModels.NewVideoMeetingVm
@{
  ViewData["Title"] = "New Video Meeting";
}
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>New Video Meeting</h1>
      <p>Start a meeting that clients can join.</p>
      <form method="post" asp-action="NewMeeting">
        <div class="form-group">
          <label>Channel Name</label>
          <input type="text" asp-for="ChannelName" />
        </div>
        <button type="submit" class="btn btn-primary" >+ New Meeting</button>
        @*<button class="btn btn-primary" asp-controller="Video" asp-action="Channel">+ New Meeting</button>*@
      </form>
    </div>
  </div>
</div>